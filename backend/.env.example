# Server Configuration
NODE_ENV=development
PORT=3001
API_VERSION=v1

# Database Configuration
# MongoDB
MONGODB_URI=mongodb://localhost:27017/ai-test-generator
MONGODB_TEST_URI=mongodb://localhost:27017/ai-test-generator-test

# PostgreSQL (alternative)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ai_test_generator
POSTGRES_USER=your_username
POSTGRES_PASSWORD=your_password
DATABASE_URL=postgresql://username:password@localhost:5432/ai_test_generator

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_REFRESH_EXPIRES_IN=7d

# AI/ML Configuration
HUGGING_FACE_API_KEY=your-hugging-face-api-key
HUGGING_FACE_MODEL=microsoft/CodeBERT-base
HUGGING_FACE_ENDPOINT=https://api-inference.huggingface.co/models
AI_TIMEOUT=30000
AI_MAX_RETRIES=3

# OpenAI (Optional fallback)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AI_RATE_LIMIT_MAX=10
AI_RATE_LIMIT_WINDOW=3600000

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads
ALLOWED_FILE_TYPES=.js,.jsx,.ts,.tsx,.py,.java,.cpp,.c,.cs,.php

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@ai-test-generator.com

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# CORS
CORS_ORIGIN=http://localhost:3000

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret

# Development
DEBUG=ai-test-generator:*